# ================================
# FREE LLM CONFIGURATION
# ================================

# === LLM Provider (Choose one) ===

# Option 1: Groq (RECOMMENDED - Fast & Free)
# Get free API key: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_key_here
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile

# Option 2: Ollama (Local - Completely Free)
# Install: https://ollama.ai/download
# LLM_PROVIDER=ollama
# LLM_BASE_URL=http://localhost:11434
# LLM_MODEL=llama3.2

# Option 3: HuggingFace (Free but slower)
# Get token: https://huggingface.co/settings/tokens
# HUGGINGFACE_API_TOKEN=hf_your_token_here
# LLM_PROVIDER=huggingface
# LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# === Embeddings (Free Options) ===

# Option 1: Local embeddings (RECOMMENDED - No API calls)
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Option 2: Ollama embeddings
# EMBEDDING_PROVIDER=ollama
# EMBEDDING_MODEL=nomic-embed-text

# === Vector Database ===

# Option 1: ChromaDB (Local, completely free)
VECTOR_DB=chromadb
CHROMADB_PATH=./data/chromadb

# Option 2: Pinecone (100K vectors free tier)
# PINECONE_API_KEY=...
# PINECONE_ENVIRONMENT=...
# PINECONE_INDEX_NAME=brain-tumor-predictions

# ================================
# DATABASE CONFIGURATION
# ================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=brain_tumor_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ================================
# EMAIL ALERTS (Optional - Free Gmail SMTP)
# ================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# ================================
# SYSTEM SETTINGS
# ================================

FLASK_PORT=5000
N8N_WEBHOOK_URL=http://localhost:5678/webhook/analyze-mri
MODEL_PATH=results/models/best_model.keras
